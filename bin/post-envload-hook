#!/usr/bin/env sh



# Update nvim plugins
nvimPlugins() {
    nvim +PlugClean! +PlugUpgrade +PlugUpdate +PlugInstall +qall
}

# Load dynamic colors for networkmanager-dmenu
networkmanagerDmenu() {
    sed -i 's/.*/echo & | envsubst/e' ~/.config/networkmanager-dmenu/config.ini
}

source ~/.zshrc
nvimPlugins
networkmanagerDmenu
